{
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "db:migrate": "tsx scripts/migrate-db.ts run",
    "db:migrate:show": "tsx scripts/migrate-db.ts show-indexes",
    "db:migrate:drop": "tsx scripts/migrate-db.ts drop-indexes",
    "db:migrate:to": "tsx scripts/migrate-db.ts run",
    "db:migrate:history": "tsx scripts/migrate-db.ts history",
    "db:migrate:help": "tsx scripts/migrate-db.ts help",

    "db:seed": "tsx scripts/seed-db.ts run",
    "db:seed:force": "tsx scripts/seed-db.ts run --force",
    "db:seed:verbose": "tsx scripts/seed-db.ts run --verbose",
    "db:seed:full": "tsx scripts/seed-db.ts run --verbose --include-movies --include-users",
    "db:seed:movies": "tsx scripts/seed-db.ts run --include-movies",
    "db:seed:users": "tsx scripts/seed-db.ts run --include-users",
    "db:seed:clear": "tsx scripts/seed-db.ts clear",
    "db:seed:stats": "tsx scripts/seed-db.ts stats",
    "db:seed:help": "tsx scripts/seed-db.ts help",

    "setup:admin": "tsx scripts/setup-admin.ts create",
    "setup:admin:force": "tsx scripts/setup-admin.ts create --force",
    "setup:admin:auto": "tsx scripts/setup-admin.ts create --non-interactive",
    "setup:admin:interactive": "tsx scripts/setup-admin.ts create --interactive",
    "setup:admin:list": "tsx scripts/setup-admin.ts list",
    "setup:admin:remove": "tsx scripts/setup-admin.ts remove",
    "setup:admin:reset": "tsx scripts/setup-admin.ts reset-password",
    "setup:admin:help": "tsx scripts/setup-admin.ts help",

    "db:setup": "npm run db:migrate && npm run db:seed && npm run setup:admin",
    "db:setup:full": "npm run db:migrate && npm run db:seed:full && npm run setup:admin",
    "db:reset": "npm run db:seed:clear && npm run db:migrate:drop && npm run db:migrate && npm run db:seed",
    "db:fresh": "npm run db:reset && npm run setup:admin:force",
    "db:status": "npm run db:migrate:history && npm run db:seed:stats",

    "docker:build": "docker build -t moviestream .",
    "docker:run": "docker run -p 3000:3000 moviestream",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",

    "backup:db": "tsx scripts/backup-db.ts create",
    "restore:db": "tsx scripts/backup-db.ts restore",

    "health:check": "tsx scripts/health-check.ts",
    "logs:tail": "tail -f logs/app.log",

    "postinstall": "npm run db:migrate",
    "prebuild": "npm run type-check && npm run lint",
    "prestart": "npm run db:migrate"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.485.0",
    "@aws-sdk/s3-request-presigner": "^3.485.0",
    "@next-auth/mongodb-adapter": "^1.1.3",
    "@tabler/icons-react": "^2.47.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.303.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.0",
    "next": "^14.1.0",
    "next-auth": "^4.24.5",
    "nodemailer": "^6.9.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.3.1",
    "stripe": "^14.12.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^14.1.0",
    "@next/swc-darwin-x64": "^14.1.0",
    "@next/swc-linux-arm64-gnu": "^14.1.0",
    "@next/swc-linux-arm64-musl": "^14.1.0",
    "@next/swc-linux-x64-gnu": "^14.1.0",
    "@next/swc-linux-x64-musl": "^14.1.0",
    "@next/swc-win32-arm64-msvc": "^14.1.0",
    "@next/swc-win32-ia32-msvc": "^14.1.0",
    "@next/swc-win32-x64-msvc": "^14.1.0"
  }
}